<%= form_for :session, url: session_path do |form| %>
  <div class="text-field field">
    <%= form.label :email , class: "label"%>
    <div class="control">
      <%= form.text_field :email, type: 'email', class: "input" %>
    </div>
  </div>

  <div class="password-field field">
    <%= form.label :password , class: "label"%>
    <div class="control">
      <%= form.password_field :password, class: "input" %>
    </div>
  </div>

  <div class="submit-field field">
    <div class="field">
      <div class="control">
        <%= form.submit "Log In", class: "button is-primary mb-10" %>

      </div>
    </div>
  </div>

  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path, class: "button mb-5" %>
    <% end %>
    <%= link_to t(".forgot_password"), new_password_path, class: "button" %>
  </div>
<% end %>
