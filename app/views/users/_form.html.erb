<div class="text-field field">
  <%= form.label :email , class: "label" %>
  <div class="control">
    <%= form.text_field :email, type: 'email' , class: "input" %>
  </div>
</div>

<div class="password-field field">
  <%= form.label :password , class: "label" %>
  <div class="control">
    <%= form.password_field :password , class: "input" %>
  </div>
</div>
