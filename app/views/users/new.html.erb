<div class="columns is-centered is-mobile">
  <div id="clearance" class="sign-up column is-four-fifths">
    <h1 class="has-text-centered"><%= t(".title") %></h1>

    <%= form_for @user do |form| %>
      <%= render partial: '/users/form', object: form %>

      <div class="submit-field field">
        <div class="field">
          <div class="control">
            <%= form.submit "Sign Up", class: "button is-primary" %>
          </div>
        </div>
      </div>

      <div class="other-links field submit-field">
        <div class="field">
          <div class="control">
            <%= link_to t(".sign_in"), sign_in_path, class: "button" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>